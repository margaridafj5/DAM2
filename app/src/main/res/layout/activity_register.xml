<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="348dp"
        android:layout_height="383dp"
        app:srcCompat="@drawable/logo2"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="-45dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="318dp"
        android:layout_height="32dp"
        android:text="Insert your email"
        android:textColor="#101010"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="349dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="318dp"
        android:layout_height="32dp"
        android:text="Insert your password"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="394dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="667dp" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="182dp"
        tools:layout_editor_absoluteY="614dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do you want to receive the news on your email?"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="586dp" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="female"
        tools:layout_editor_absoluteX="46dp"
        tools:layout_editor_absoluteY="505dp" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="70dp"
        android:layout_height="47dp"
        android:text="Male"
        tools:layout_editor_absoluteX="174dp"
        tools:layout_editor_absoluteY="505dp" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        tools:layout_editor_absoluteX="288dp"
        tools:layout_editor_absoluteY="504dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="163dp"
        android:layout_height="21dp"
        android:text="Insert your name"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="305dp" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="161dp"
        android:layout_height="20dp"
        android:text="Insert your surname"
        tools:layout_editor_absoluteX="218dp"
        tools:layout_editor_absoluteY="305dp" />

    <EditText
        android:id="@+id/editTextDate"
        android:layout_width="316dp"
        android:layout_height="35dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="date"
        android:text="Insert your birth date"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:layout_editor_absoluteX="46dp" />

</androidx.constraintlayout.widget.ConstraintLayout>